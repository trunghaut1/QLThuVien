        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-table"></i> LẬP pHIẾU MƯỢN</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i>Trang Chủ<a href="index.html"></a></li>
                            <li><i class="fa fa-table"></i>Mượn Sách</li>
                            <li><i class="fa fa-th-list"></i>Lập Phiếu Mượn</li>
                        </ol>
                    </div>
                </div>
                <!-- page start-->
                <div class="row">
                    <div class="col-sm-6">
                        <section class="panel"></section>
                    </div>
                </div>
                <div class="row"></div>
                <div class="row"></div>
                <div class="row"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            @using(Html.BeginForm("Search","PhieuMuon",FormMethod.Post))
                            {
                                <div align="right">
                                
                                <input type="text" name="search" id="search" placeholder="Nhập mã hoặc tên độc giả"/>
                                <input type="submit" value="Tìm Kiếm"/>
                            </div>
                            }
                                
                            
                            <header class="panel-heading">Danh Sách Độc Giả</header>
                            
                                <table class="table table-striped table-advance table-hover" id="a">
                                    <tbody>
                                        <tr>
                                            <th>Mã Độc Giả</th>
                                            <th><i class="icon_profile"></i> Tên Độc Giả</th>
                                            <th><i class="icon_mail_alt"> </i>Email</th>
                                            <th><i class="icon_profile"></i> Ngày Hết Hạn	</th>

                                            <th><i class="icon_mobile"></i> SDT</th>
                                            <th>Viên Chức</th>
                                            <th>Tác Vụ</th>

                                        </tr>
                                        @{
                                            foreach (DocGia dg in (List<DocGia>)ViewData["dsdg"])
                                            {
                                                <tr>
                                                    <td>@dg.MaDocGia</td>
                                                    <td>@dg.TenDocGia</td>
                                                    <td>@dg.Email</td>
                                                    <td>@dg.NgayHetHan.Value.ToShortDateString()</td>
                                                    <td>@dg.SDT</td>
                                                    <td>
                                                        @if (dg.VienChuc == true)
                                                        {<input type="checkbox" checked disabled> }
                                                        else
                                                        {<input type="checkbox" disabled>}
                                                    </td>
                                                    <td>@Html.ActionLink("Lập Phiếu Mượn", "lapphieumuon/", "PhieuMuon", new { id = dg.MaDocGia, _sotrang = 1 }, null)</td>

                                                </tr>
                                            }
                                        }


                                    </tbody>
                                </table>
</section>
                      
                      
                                
                            @if(int.Parse(ViewBag.theloai)==0)
                            {
                                 for (int i = 1; i <= (int.Parse(ViewBag.tongso) / 5); i++)
                        {<i id="page+@i"> @Html.ActionLink("  " + i, "Index/" + i, "PhieuMuon")  </i> } 
                                                                                                      }
                           
                          else
                            { 
                                for (int i = 1; i <= (int.Parse(ViewBag.tongso) / 5); i++)
                        {<i id="page+@i"> @Html.ActionLink("  " + i, "_search/", "PhieuMuon", new {name=ViewBag.keyword,id=i },null)  </i> } 
                            }
                            
                    </div>
                                
                </div>
                            
                <!-- page end-->
            </section>
                            
